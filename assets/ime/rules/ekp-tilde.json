{
  "id": "ekp-tilde",
  "name": "ekp-tilde",
  "description": "Ekpeye input keyboard - tilde",
  "date": "2024-05-17",
  "author": "Amir E. Aharoni",
  "license": "GPLv3",
  "version": "1.0",
  "rules": [
    {
      "pattern": "~E",
      "replacement": "Ẹ"
    },
    {
      "pattern": "~e",
      "replacement": "ẹ"
    },
    {
      "pattern": "~I",
      "replacement": "Ị"
    },
    {
      "pattern": "~i",
      "replacement": "ị"
    },
    {
      "pattern": "~O",
      "replacement": "Ọ"
    },
    {
      "pattern": "~o",
      "replacement": "ọ"
    },
    {
      "pattern": "~U",
      "replacement": "Ụ"
    },
    {
      "pattern": "~u",
      "replacement": "ụ"
    },
    {
      "pattern": "~\\\\",
      "replacement": "̀"
    },
    {
      "pattern": "~\\^",
      "replacement": "̂"
    },
    {
      "pattern": "~-",
      "replacement": "̄"
    }
  ]
}