{
  "id": "ig-tilde",
  "name": "ig-tilde",
  "description": "Igbo input keyboard",
  "date": "2018-11-30",
  "author": "Amir E. Aharoni",
  "license": "GPLv3",
  "version": "1.0",
  "rules": [
    {
      "pattern": "~I",
      "replacement": "Ị"
    },
    {
      "pattern": "~i",
      "replacement": "ị"
    },
    {
      "pattern": "~N",
      "replacement": "Ṅ"
    },
    {
      "pattern": "~n",
      "replacement": "ṅ"
    },
    {
      "pattern": "~O",
      "replacement": "Ọ"
    },
    {
      "pattern": "~o",
      "replacement": "ọ"
    },
    {
      "pattern": "~U",
      "replacement": "Ụ"
    },
    {
      "pattern": "~u",
      "replacement": "ụ"
    },
    {
      "pattern": "~\\\\",
      "replacement": "̀"
    },
    {
      "pattern": "~/",
      "replacement": "́"
    },
    {
      "pattern": "~\\-",
      "replacement": "̄"
    }
  ]
}