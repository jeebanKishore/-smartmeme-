      "pattern": "ச்h",
      "replacement": "h"
    },
    {
      "pattern": "ழ்h",
      "replacement": "h"
    },
    {
      "pattern": "ஸ்ர்i",
      "replacement": "ஸ்ரீ"
    },
    {
      "pattern": "க்(ச்|ஸ்)h",
      "replacement": "க்‌ஷ்"
    },
    {
      "pattern": "க்(ச்|ஸ்)H",
      "replacement": "க்ஷ்"
    },
    {
      "pattern": "([க-ஹ])்a",
      "replacement": "$1"
    },
    {
      "pattern": "([க-ஹ])(்A|a)",
      "replacement": "$1ா"
    },
    {
      "pattern": "([க-ஹ])்i",
      "replacement": "$1ி"
    },
    {
      "pattern": "([க-ஹ])(்I|ிi)",
      "replacement": "$1ீ"
    },
    {
      "pattern": "([க-ஹ])்u",
      "replacement": "$1ு"
    },
    {
      "pattern": "([க-ஹ])(்U|ுu)",
      "replacement": "$1ூ"
    },
    {
      "pattern": "([க-ஹ])்e",
      "replacement": "$1ெ"
    },
    {
      "pattern": "([க-ஹ])(்E|ெe)",
      "replacement": "$1ே"
