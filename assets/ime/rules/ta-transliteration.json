    {
      "pattern": "([க-ஹ])i",
      "replacement": "$1ை"
    },
    {
      "pattern": "([க-ஹ])்o",
      "replacement": "$1ொ"
    },
    {
      "pattern": "([க-ஹ])(்O|ொo)",
      "replacement": "$1ோ"
    },
    {
      "pattern": "([க-ஹ])u",
      "replacement": "$1ௌ"
    },
    {
      "pattern": "([அ-ஹ][ெ-்]?)n",
      "replacement": "$1ன்"
    },
