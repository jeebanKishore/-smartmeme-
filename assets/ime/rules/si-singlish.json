      "replacement": "භ්"
    },
    {
      "pattern": "(\\\\r|R)",
      "replacement": "ර්‍"
    },
    {
      "pattern": "(\\\\y|Y)",
      "replacement": "‍ය්"
    },
    {
      "pattern": "අ(a|\\))",
      "replacement": "ආ"
    },
    {
      "pattern": "ඇ(a|\\))",
      "replacement": "ඈ"
    },
    {
      "pattern": "(ඉ[i\\)e]|එe)",
      "replacement": "ඊ"
    },
    {
      "pattern": "එ[a\\)i]",
      "replacement": "ඒ"
    },
    {
      "pattern": "ඔ[e\\)]",
      "replacement": "ඕ"
    },
    {
      "pattern": "(උ[u\\)]|ඔo)",
      "replacement": "ඌ"
    },
    {
      "pattern": "අu",
      "replacement": "ඖ"
    },
    {
      "pattern": "\\\\n",
      "replacement": "ං"
