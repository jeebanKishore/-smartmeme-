  "license": "GPLv3",
  "version": "1.0",
  "contextLength": 5,
  "maxKeyLength": 5,
  "rules": [
    {
      "pattern": "ඬ්h",
      "replacement": "ඳ්"
    },
    {
      "pattern": "න්න්d",
      "replacement": "ඬ්"
    },
    {
      "pattern": "න්න්g",
      "replacement": "ඟ්"
    },
    {
      "pattern": "\\u0DC1\\u0DCA\\u200D\\u0DBB\\u0DD2i",
      "replacement": "ශ්‍රී"
    },
    {
      "pattern": "\\u0DC1\\u0DCA\\u200D\\u0DBBi",
      "replacement": "ශ්‍රි"
    },
    {
      "pattern": "ශ්r",
      "replacement": "ශ්‍ර"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])්\\u200Dර්u",
      "replacement": "$1ෘ"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])ෘu",
      "replacement": "$1ෲ"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])්a",
      "replacement": "$1"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])a",
      "replacement": "$1ා"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])්A",
      "replacement": "$1ැ"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])ැa",
      "replacement": "$1ෑ"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])්i",
      "replacement": "$1ි"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])ි[ei]",
      "replacement": "$1ී"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])්u",
      "replacement": "$1ු"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])ුu",
      "replacement": "$1ූ"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])්e",
      "replacement": "$1ෙ"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])ෙ[ai]",
      "replacement": "$1ේ"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])්o",
      "replacement": "$1ො"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])ොe",
      "replacement": "$1ෝ"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])u",
      "replacement": "$1ෞ"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6])්I",
      "replacement": "$1ෛ"
    },
    {
      "pattern": "([\\u0D9A-\\u0DC6]්)r",
      "replacement": "$1‍ර්"
    },
    {
      "pattern": "ළුu",
      "replacement": "ළුු"
    },
    {
      "pattern": "(ක්h|K)",
      "replacement": "ඛ්"
    },
    {
      "pattern": "(ග්h|G)",
      "replacement": "ඝ්"
    },
    {
      "pattern": "ස්h",
      "replacement": "ශ්"
    },
    {
