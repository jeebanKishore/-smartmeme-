{
  "id": "hoc-latn-tilde",
  "name": "Ho Latin tilde",
  "description": "Ho Latin tilde keyboard",
  "date": "2025-04-30",
  "author": "Amir E. Aharoni",
  "license": "GPLv3",
  "version": "1.0",
  "maxKeyLength": 3,
  "rules": [
    {
      "pattern": "C~/",
      "replacement": "Ć"
    },
    {
      "pattern": "C~/",
      "replacement": "ć"
    },
    {
      "pattern": "~D",
      "replacement": "Ḍ"
    },
    {
      "pattern": "~d",
      "replacement": "ḍ"
    },
    {
      "pattern": "K~/",
      "replacement": "Ḱ"
    },
    {
      "pattern": "K~/",
      "replacement": "ḱ"
    },
    {
      "pattern": "~N",
      "replacement": "Ṅ"
    },
    {
      "pattern": "~n",
      "replacement": "ṅ"
    },
    {
      "pattern": "N~/",
      "replacement": "Ń"
    },
    {
      "pattern": "n~/",
      "replacement": "ń"
    },
    {
      "pattern": "P~/",
      "replacement": "Ṕ"
    },
    {
      "pattern": "p~/",
      "replacement": "ṕ"
    },
    {
      "pattern": "~R",
      "replacement": "Ṛ"
    },
    {
      "pattern": "~r",
      "replacement": "ṛ"
    },
    {
      "pattern": "T~/",
      "replacement": "T́"
    },
    {
      "pattern": "t~/",
      "replacement": "t́"
    },
    {
      "pattern": "~T",
      "replacement": "Ṭ"
    },
    {
      "pattern": "~t",
      "replacement": "ṭ"
    },
    {
      "pattern": "~\\\\",
      "replacement": "̀"
    },
    {
      "pattern": "~/",
      "replacement": "́"
    },
    {
      "pattern": "~\\^",
      "replacement": "̂"
    },
    {
      "pattern": "~\\{",
      "replacement": "̃"
    }
  ]
}