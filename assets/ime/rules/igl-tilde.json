{
  "id": "igl-tilde",
  "name": "igl-tilde",
  "description": "Igala input keyboard - tilde",
  "date": "2023-01-29",
  "author": "Amir E. Aharoni",
  "license": "GPLv3",
  "version": "1.0",
  "rules": [
    {
      "pattern": "~E",
      "replacement": "Ẹ"
    },
    {
      "pattern": "~e",
      "replacement": "ẹ"
    },
    {
      "pattern": "~N",
      "replacement": "Ñ"
    },
    {
      "pattern": "~n",
      "replacement": "ñ"
    },
    {
      "pattern": "~O",
      "replacement": "Ọ"
    },
    {
      "pattern": "~o",
      "replacement": "ọ"
    },
    {
      "pattern": "~\\\\",
      "replacement": "̀"
    },
    {
      "pattern": "~/",
      "replacement": "́"
    },
    {
      "pattern": "~\\^",
      "replacement": "̂"
    },
    {
      "pattern": "~\\-",
      "replacement": "̄"
    },
    {
      "pattern": "~v",
      "replacement": "̌"
    }
  ]
}